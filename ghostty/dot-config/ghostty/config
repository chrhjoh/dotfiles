# Fonts
font-family = JetBrains Mono
font-family = Symbols Nerd Font Mono
font-size = 12


# Theme
theme = Catppuccin Mocha


# Decorations
macos-titlebar-style = tabs


# Quick Terminal
keybind = global:cmd+grave_accent=toggle_quick_terminal

# Moving
keybind = super+alt+l=goto_split:right
keybind = super+alt+k=goto_split:down
keybind = super+alt+h=goto_split:left
keybind = super+alt+j=goto_split:up

keybind = super+alt+physical:one=goto_tab:1
keybind = super+alt+physical:two=goto_tab:2
keybind = super+alt+physical:three=goto_tab:3
keybind = super+alt+physical:four=goto_tab:4
keybind = super+alt+physical:five=goto_tab:5
keybind = super+alt+physical:six=goto_tab:6
keybind = super+alt+physical:seven=goto_tab:7
keybind = super+alt+physical:eight=goto_tab:8


# SSH 
shell-integration-features = ssh-env,sudo

# Clipboard
clipboard-read = allow
clipboard-write = allow
